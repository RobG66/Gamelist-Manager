<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F3F"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFB0B0B0"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#FF707070"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="#FF1E1E1E"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#FF3F3F3F"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#FF5F5F5F"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="#FF7F7F7F"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#FF2A2A2A"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FF252525"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#FF404040"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#FF3A3A3A"/>

    <!-- Accent/Selection Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#FF264F78"/>

    <!-- ============================================ -->
    <!-- APPLICATION-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="Transparent"/>

    
    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Menu.Static.Background" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="Menu.Static.Border" Color="#FF3F3F3F"/>
    <SolidColorBrush x:Key="Menu.Static.Foreground" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="Menu.Static.Separator" Color="#FF3F3F3F"/>
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="#FF707070"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#3D0078D4"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#3D0078D4"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Background" Color="#0AFFFFFF"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Border" Color="#21FFFFFF"/>

    <!-- Ribbon Colors -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="RibbonForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="DarkGray"/>

    <!-- Ribbon Tab Colors -->
    <SolidColorBrush x:Key="RibbonTabHoverBackground" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBackground" Color="#FF252525"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBorder" Color="#FF0078D4"/>

    <!-- Ribbon Button Colors -->
    <SolidColorBrush x:Key="RibbonButtonHoverBackground" Color="#3D0078D4"/>
    <SolidColorBrush x:Key="RibbonButtonHoverBorder" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBackground" Color="#FF264F78"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBorder" Color="#FF005A9E"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBackground" Color="#FF264F78"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBorder" Color="#FF005A9E"/>

    <!-- Ribbon Group Colors -->
    <SolidColorBrush x:Key="RibbonGroupBorder" Color="#FF3F3F3F"/>
    <SolidColorBrush x:Key="RibbonGroupLabelBackground" Color="#FF252525"/>

    <!-- Ribbon Separator -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="#FF3F3F3F"/>

    <!-- Application Menu Colors -->
    <SolidColorBrush x:Key="RibbonApplicationMenuBackground" Color="#FF252525"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuBorder" Color="#FF3F3F3F"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="DataGridNewItemBrush" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="DataGridMissingItemBrush" Color="#FFF44336"/>

    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FF252525"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FFE0E0E0"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FF1A3A52"/>
    <SolidColorBrush x:Key="PanelForegroundBrush" Color="#FFE0E0E0"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FF252525"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#FF3F3F3F"/>

    <!-- Filter Panel -->
    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="#FF3A3A3A"/>

    <!-- Info Card Colors -->
    <SolidColorBrush x:Key="TotalCardBackgroundBrush" Color="#FF1565C0"/>
    <SolidColorBrush x:Key="HiddenCardBackgroundBrush" Color="#FFF57C00"/>
    <SolidColorBrush x:Key="ShowingCardBackgroundBrush" Color="#FF388E3C"/>
    <SolidColorBrush x:Key="FavoriteCardBackgroundBrush" Color="#FF7B1FA2"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="#FFE0E0E0"/>

    <!-- Dark Border -->
    <SolidColorBrush x:Key="DarkBorderBrush" Color="#FF1A1A1A"/>

    <!-- DAT Tool Page Colors -->
    <SolidColorBrush x:Key="DatSummaryBackgroundBrush" Color="#FF1A2A3A"/>
    <SolidColorBrush x:Key="DatSummaryBorderBrush" Color="#FF3A5A7A"/>
    <SolidColorBrush x:Key="DatSummaryHeaderBrush" Color="#FF6A9ADA"/>
    <SolidColorBrush x:Key="DatSummaryAccentBrush" Color="#FF5A8ACA"/>

    <SolidColorBrush x:Key="GamelistSummaryBackgroundBrush" Color="#FF1A2A1A"/>
    <SolidColorBrush x:Key="GamelistSummaryBorderBrush" Color="#FF3A5A3A"/>
    <SolidColorBrush x:Key="GamelistSummaryHeaderBrush" Color="#FF66CC66"/>
    <SolidColorBrush x:Key="GamelistSummaryAccentBrush" Color="#FF55BB55"/>

    <SolidColorBrush x:Key="ReportSummaryBackgroundBrush" Color="#FF2A2520"/>
    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#FF4A4540"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#FF6A9ADA"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#FF5F5F5F"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="ProgressBarSuccessBrush" Color="#FF388E3C"/>
    <SolidColorBrush x:Key="ProgressBarWarningBrush" Color="#FFF57C00"/>
    <SolidColorBrush x:Key="ProgressBarErrorBrush" Color="#FFE53935"/>

    <!-- ComboBox -->
    <LinearGradientBrush x:Key="ComboBoxBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF3A3A3A" Offset="0"/>
        <GradientStop Color="#FF2D2D2D" Offset="0.5"/>
        <GradientStop Color="#FF252525" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#FF3F3F3F"/>
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#FF264F78"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#FF0078D4"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#FF5F5F5F"/>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="CheckMarkBrush" Color="#FFE0E0E0"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="#FF5F5F5F"/>
    <SolidColorBrush x:Key="RadioButtonDotBrush" Color="#FFE0E0E0"/>

    <!-- Splitters -->
    <SolidColorBrush x:Key="SplitterGripBrush" Color="#FF7F7F7F"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#FF0078D4"/>

    <!-- ============================================ -->
    <!-- CONTROL STYLES -->
    <!-- ============================================ -->

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- DataGridColumnHeader -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style x:Key="GreyRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFb0b0b0" Offset="0"/>
                    <GradientStop Color="#FF3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFE0E0E0"/>
        <Setter Property="BorderBrush" Value="#FF5F5F5F"/>
    </Style>

    <Style x:Key="GreenRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF388E3C" Offset="0"/>
                    <GradientStop Color="#FF2E7D32" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF1B5E20"/>
    </Style>

