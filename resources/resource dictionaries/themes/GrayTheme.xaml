<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Colors - Grey Tones -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#BDBDBD"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#424242"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="#FFFFFF"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="#757575"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#E0E0E0"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#F5F5F5"/>

    <!-- Accent/Selection Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#616161"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#E0E0E0"/>

    <!-- ============================================ -->
    <!-- APPLICATION-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="Transparent"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="Menu.Static.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Menu.Static.Border" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="Menu.Static.Foreground" Color="#212121"/>
    <SolidColorBrush x:Key="Menu.Static.Separator" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Background" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Border" Color="#E0E0E0"/>

    <!-- Ribbon Colors -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="RibbonForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="#BDBDBD"/>

    <!-- Ribbon Tab Colors -->
    <SolidColorBrush x:Key="RibbonTabHoverBackground" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBorder" Color="#757575"/>

    <!-- Ribbon Button Colors -->
    <SolidColorBrush x:Key="RibbonButtonHoverBackground" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="RibbonButtonHoverBorder" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBackground" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBorder" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBackground" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBorder" Color="#9E9E9E"/>

    <!-- Ribbon Group Colors -->
    <SolidColorBrush x:Key="RibbonGroupBorder" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="RibbonGroupLabelBackground" Color="#EEEEEE"/>

    <!-- Ribbon Separator -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="#E0E0E0"/>

    <!-- Application Menu Colors -->
    <SolidColorBrush x:Key="RibbonApplicationMenuBackground" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuBorder" Color="#BDBDBD"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="DataGridNewItemBrush" Color="#558B2F"/>
    <SolidColorBrush x:Key="DataGridMissingItemBrush" Color="#C62828"/>

    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#212121"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="PanelForegroundBrush" Color="#212121"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#BDBDBD"/>

    <!-- Filter Panel -->
    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="#EEEEEE"/>

    <!-- Info Card Colors -->
    <SolidColorBrush x:Key="TotalCardBackgroundBrush" Color="#546E7A"/>
    <SolidColorBrush x:Key="HiddenCardBackgroundBrush" Color="#FB8C00"/>
    <SolidColorBrush x:Key="ShowingCardBackgroundBrush" Color="#689F38"/>
    <SolidColorBrush x:Key="FavoriteCardBackgroundBrush" Color="#8E24AA"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="#FFFFFF"/>

    <!-- Dark Border -->
    <SolidColorBrush x:Key="DarkBorderBrush" Color="#757575"/>

    <!-- DAT Tool Page Colors -->
    <SolidColorBrush x:Key="DatSummaryBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="DatSummaryBorderBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="DatSummaryHeaderBrush" Color="#616161"/>
    <SolidColorBrush x:Key="DatSummaryAccentBrush" Color="#424242"/>

    <SolidColorBrush x:Key="GamelistSummaryBackgroundBrush" Color="#F1F8E9"/>
    <SolidColorBrush x:Key="GamelistSummaryBorderBrush" Color="#C5E1A5"/>
    <SolidColorBrush x:Key="GamelistSummaryHeaderBrush" Color="#558B2F"/>
    <SolidColorBrush x:Key="GamelistSummaryAccentBrush" Color="#33691E"/>

    <SolidColorBrush x:Key="ReportSummaryBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#616161"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#616161"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#616161"/>
    <SolidColorBrush x:Key="ProgressBarSuccessBrush" Color="#689F38"/>
    <SolidColorBrush x:Key="ProgressBarWarningBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key="ProgressBarErrorBrush" Color="#EF5350"/>

    <!-- ComboBox -->
    <LinearGradientBrush x:Key="ComboBoxBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F5F5F5" Offset="0.5"/>
        <GradientStop Color="#EEEEEE" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#212121"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#212121"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#BDBDBD"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="CheckMarkBrush" Color="#212121"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="RadioButtonDotBrush" Color="#212121"/>

    <!-- Splitters -->
    <SolidColorBrush x:Key="SplitterGripBrush" Color="#9E9E9E"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#616161"/>

    <!-- ============================================ -->
    <!-- CONTROL STYLES -->
    <!-- ============================================ -->

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style x:Key="GreyRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#E0E0E0" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="BorderBrush" Value="#9E9E9E"/>
    </Style>

    <Style x:Key="GreenRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#8BC34A" Offset="0"/>
                    <GradientStop Color="#689F38" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#558B2F"/>
    </Style>

    <Style x:Key="BlueRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#64B5F6" Offset="0"/>
                    <GradientStop Color="#42A5F5" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#1976D2"/>
    </Style>

    <Style x:Key="OrangeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFB74D" Offset="0"/>
                    <GradientStop Color="#FFA726" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#F57C00"/>
    </Style>

    <Style x:Key="YellowRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF176" Offset="0"/>
                    <GradientStop Color="#FFEE58" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="BorderBrush" Value="#FBC02D"/>
    </Style>

    <Style x:Key="RedRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#E57373" Offset="0"/>
                    <GradientStop Color="#EF5350" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#C62828"/>
    </Style>

    <Style x:Key="PurpleRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#BA68C8" Offset="0"/>
                    <GradientStop Color="#AB47BC" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#8E24AA"/>
    </Style>

    <Style x:Key="TealRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#4DB6AC" Offset="0"/>
                    <GradientStop Color="#26A69A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#00897B"/>
    </Style>

    <Style x:Key="PinkRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F06292" Offset="0"/>
                    <GradientStop Color="#EC407A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#C2185B"/>
    </Style>

    <Style x:Key="BrownRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#A1887F" Offset="0"/>
                    <GradientStop Color="#8D6E63" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#6D4C41"/>
    </Style>

    <Style x:Key="CyanRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#4DD0E1" Offset="0"/>
                    <GradientStop Color="#26C6DA" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#00ACC1"/>
    </Style>

    <Style x:Key="LimeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#AED581" Offset="0"/>
                    <GradientStop Color="#9CCC65" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="BorderBrush" Value="#7CB342"/>
    </Style>

</ResourceDictionary>