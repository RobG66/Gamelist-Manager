    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#E2D4C9"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#6E5A55"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#EAD7CD"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#C9B5AC"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#C9795E"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#C9795E"/>
