<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="Gray"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#333333"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#999999"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="White"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#888888"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="#666666"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#CCCCCC"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#A9A9A9"/>

    <!-- Accent/Selection Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#B5D9FF"/>

    <!-- ============================================ -->
    <!-- APPLICATION-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="Transparent"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FFFDFDFD"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="Menu.Static.Background" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="Menu.Static.Border" Color="#FF999999"/>
    <SolidColorBrush x:Key="Menu.Static.Foreground" Color="#FF212121"/>
    <SolidColorBrush x:Key="Menu.Static.Separator" Color="#FFD7D7D7"/>
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="#FF707070"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#3D26A0DA"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#FF26A0DA"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#3D26A0DA"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#FF26A0DA"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Background" Color="#0A000000"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Border" Color="#21000000"/>

    <!-- Ribbon Colors -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="#FFFDFDFD"/>
    <SolidColorBrush x:Key="RibbonForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="#FF999999"/>

    <!-- Ribbon Tab Colors -->
    <SolidColorBrush x:Key="RibbonTabHoverBackground" Color="#FFEEEEEE"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBorder" Color="#0078D4"/>

    <!-- Ribbon Button Colors -->
    <SolidColorBrush x:Key="RibbonButtonHoverBackground" Color="#FFE5F3FB"/>
    <SolidColorBrush x:Key="RibbonButtonHoverBorder" Color="#FFB8D6FB"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBackground" Color="#FFD0E9FA"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBorder" Color="#FF92C0E0"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBackground" Color="#FFD0E9FA"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBorder" Color="#FF92C0E0"/>

    <!-- Ribbon Group Colors -->
    <SolidColorBrush x:Key="RibbonGroupBorder" Color="#FFD4D4D4"/>
    <SolidColorBrush x:Key="RibbonGroupLabelBackground" Color="#FFF0F0F0"/>

    <!-- Ribbon Separator -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="#FFD7D7D7"/>

    <!-- Application Menu Colors -->
    <SolidColorBrush x:Key="RibbonApplicationMenuBackground" Color="#0078D4"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuBorder" Color="#FF999999"/>
   
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="DataGridNewItemBrush" Color="Green"/>
    <SolidColorBrush x:Key="DataGridMissingItemBrush" Color="Red"/>

    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="Beige"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FF333333"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFC1D1E4"/>
    <SolidColorBrush x:Key="PanelForegroundBrush" Color="#FF333333"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="Gray"/>

    <!-- Filter Panel -->
    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="LightGray"/>

    <!-- Info Card Colors -->
    <SolidColorBrush x:Key="TotalCardBackgroundBrush" Color="#FF1976D2"/>
    <SolidColorBrush x:Key="HiddenCardBackgroundBrush" Color="Orange"/>
    <SolidColorBrush x:Key="ShowingCardBackgroundBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="FavoriteCardBackgroundBrush" Color="#FFB39DDB"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="White"/>

    <!-- Dark Border -->
    <SolidColorBrush x:Key="DarkBorderBrush" Color="Black"/>

    <!-- DAT Tool Page Colors -->
    <SolidColorBrush x:Key="DatSummaryBackgroundBrush" Color="#f3f7ff"/>
    <SolidColorBrush x:Key="DatSummaryBorderBrush" Color="#c3d2ff"/>
    <SolidColorBrush x:Key="DatSummaryHeaderBrush" Color="#1a3da6"/>
    <SolidColorBrush x:Key="DatSummaryAccentBrush" Color="#0a2f70"/>

    <SolidColorBrush x:Key="GamelistSummaryBackgroundBrush" Color="#f5fff3"/>
    <SolidColorBrush x:Key="GamelistSummaryBorderBrush" Color="#b7e6b3"/>
    <SolidColorBrush x:Key="GamelistSummaryHeaderBrush" Color="#006600"/>
    <SolidColorBrush x:Key="GamelistSummaryAccentBrush" Color="#004d00"/>

    <SolidColorBrush x:Key="ReportSummaryBackgroundBrush" Color="#FAF0E6"/>
    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#E6D8C3"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#1a3da6"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#FF66BB6A"/>
    <SolidColorBrush x:Key="ProgressBarSuccessBrush" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="ProgressBarWarningBrush" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="ProgressBarErrorBrush" Color="#FFF44336"/>

    <!-- ComboBox -->
    <LinearGradientBrush x:Key="ComboBoxBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF0F0F0" Offset="0"/>
        <GradientStop Color="#FFE2E2E2" Offset="0.5"/>
        <GradientStop Color="#FFD6D6D6" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#E0F0FF"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#B5D9FF"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#888888"/>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="CheckMarkBrush" Color="#333333"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="RadioButtonDotBrush" Color="Black"/>

    <!-- Splitters -->
    <SolidColorBrush x:Key="SplitterGripBrush" Color="Gray"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#FF007ACC"/>

    <!-- ============================================ -->
    <!-- CONTROL STYLES -->
    <!-- ============================================ -->

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style x:Key="GreyRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFD3D3D3" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="#FF808080"/>
    </Style>

    <Style x:Key="GreenRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF98FB98" Offset="0"/>
                    <GradientStop Color="#FF66C266" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF4682B4"/>
    </Style>

    <Style x:Key="BlueRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF87CEFA" Offset="0"/>
                    <GradientStop Color="#FF4682B4" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF2C5F87"/>
    </Style>

    <Style x:Key="OrangeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFD580" Offset="0"/>
                    <GradientStop Color="#FFFFA500" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FFCC8400"/>
    </Style>

    <Style x:Key="YellowRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFFA0" Offset="0"/>
                    <GradientStop Color="#FFCCCC00" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF999900"/>
    </Style>

    <Style x:Key="RedRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFA07A" Offset="0"/>
                    <GradientStop Color="#FFCD5C5C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF8B3A3A"/>
    </Style>

    <Style x:Key="PurpleRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFDDA0DD" Offset="0"/>
                    <GradientStop Color="#FF9932CC" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF661A99"/>
    </Style>

    <Style x:Key="TealRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF80CED6" Offset="0"/>
                    <GradientStop Color="#FF008080" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF005050"/>
    </Style>

    <Style x:Key="PinkRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFB6C1" Offset="0"/>
                    <GradientStop Color="#FFDB7093" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FFAA4B6E"/>
    </Style>

    <Style x:Key="BrownRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFD2B48C" Offset="0"/>
                    <GradientStop Color="#FFA0522D" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF7B3F1E"/>
    </Style>

    <Style x:Key="CyanRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFB2FFFF" Offset="0"/>
                    <GradientStop Color="#FF00CED1" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF008B8B"/>
    </Style>

    <Style x:Key="LimeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFCCFF99" Offset="0"/>
                    <GradientStop Color="#FF99CC00" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF669900"/>
    </Style>

</ResourceDictionary>