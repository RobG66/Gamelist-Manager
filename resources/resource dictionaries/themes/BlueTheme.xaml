<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Colors - Light Blue Tones -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#EBF4FA"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#A4C2E0"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#999999"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="#FFFFFF"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#D0D0D0"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#F0F0F0"/>

    <!-- Accent/Selection Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#BBDEFB"/>

    <!-- ============================================ -->
    <!-- APPLICATION-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="Transparent"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F0F7FC"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="Menu.Static.Background" Color="#F0F7FC"/>
    <SolidColorBrush x:Key="Menu.Static.Border" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="Menu.Static.Foreground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="Menu.Static.Separator" Color="#C5D9EB"/>
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="#999999"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#007ACC"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#007ACC"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Border" Color="#D0D0D0"/>

    <!-- Ribbon Colors -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="#F0F7FC"/>
    <SolidColorBrush x:Key="RibbonForegroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="#A4C2E0"/>

    <!-- Ribbon Tab Colors -->
    <SolidColorBrush x:Key="RibbonTabHoverBackground" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBorder" Color="#007ACC"/>

    <!-- Ribbon Button Colors -->
    <SolidColorBrush x:Key="RibbonButtonHoverBackground" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="RibbonButtonHoverBorder" Color="#90CAF9"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBackground" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBorder" Color="#42A5F5"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBackground" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBorder" Color="#42A5F5"/>

    <!-- Ribbon Group Colors -->
    <SolidColorBrush x:Key="RibbonGroupBorder" Color="#C5D9EB"/>
    <SolidColorBrush x:Key="RibbonGroupLabelBackground" Color="#E3F2FD"/>

    <!-- Ribbon Separator -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="#C5D9EB"/>

    <!-- Application Menu Colors -->
    <SolidColorBrush x:Key="RibbonApplicationMenuBackground" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuBorder" Color="#A4C2E0"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DataGridNewItemBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="DataGridMissingItemBrush" Color="#D13438"/>

    <!-- Status Bar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#007ACC"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FFFFFF"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="PanelForegroundBrush" Color="#1E1E1E"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#A4C2E0"/>

    <!-- Filter Panel -->
    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="#E3F2FD"/>

    <!-- Info Card Colors -->
    <SolidColorBrush x:Key="TotalCardBackgroundBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="HiddenCardBackgroundBrush" Color="#F57C00"/>
    <SolidColorBrush x:Key="ShowingCardBackgroundBrush" Color="#388E3C"/>
    <SolidColorBrush x:Key="FavoriteCardBackgroundBrush" Color="#7B1FA2"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="#FFFFFF"/>

    <!-- Dark Border -->
    <SolidColorBrush x:Key="DarkBorderBrush" Color="#666666"/>

    <!-- DAT Tool Page Colors -->
    <SolidColorBrush x:Key="DatSummaryBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="DatSummaryBorderBrush" Color="#90CAF9"/>
    <SolidColorBrush x:Key="DatSummaryHeaderBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="DatSummaryAccentBrush" Color="#1565C0"/>

    <SolidColorBrush x:Key="GamelistSummaryBackgroundBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="GamelistSummaryBorderBrush" Color="#A5D6A7"/>
    <SolidColorBrush x:Key="GamelistSummaryHeaderBrush" Color="#388E3C"/>
    <SolidColorBrush x:Key="GamelistSummaryAccentBrush" Color="#2E7D32"/>

    <SolidColorBrush x:Key="ReportSummaryBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#CCCEDB"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#1976D2"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="LightSteelBlue"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#FF3A5A7A"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#FF42A5F5"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#FF42A5F5"/>
    <SolidColorBrush x:Key="ProgressBarSuccessBrush" Color="#FF66BB6A"/>
    <SolidColorBrush x:Key="ProgressBarWarningBrush" Color="#FFFFA726"/>
    <SolidColorBrush x:Key="ProgressBarErrorBrush" Color="#FFEF5350"/>
    
    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#BBDEFB"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="CheckMarkBrush" Color="#007ACC"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="#A4C2E0"/>
    <SolidColorBrush x:Key="RadioButtonDotBrush" Color="#007ACC"/>

    <!-- Splitters -->
    <SolidColorBrush x:Key="SplitterGripBrush" Color="#A4C2E0"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#D1E7F8"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#007ACC"/>

    <!-- Shadow Color -->
    <Color x:Key="ShadowColor">#80000000</Color>

    <!-- ============================================ -->
    <!-- CONTROL STYLES -->
    <!-- ============================================ -->

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2,4,2"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style x:Key="GreyRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#A4C2E0"/>
    </Style>

    <Style x:Key="GreenRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#66BB6A"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#4CAF50"/>
    </Style>

    <Style x:Key="BlueRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#42A5F5"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#2196F3"/>
    </Style>

    <Style x:Key="OrangeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#FFA726"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#FF9800"/>
    </Style>

    <Style x:Key="YellowRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#FFEE58"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#FFEB3B"/>
    </Style>

    <Style x:Key="RedRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#EF5350"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#F44336"/>
    </Style>

    <Style x:Key="PurpleRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#AB47BC"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#9C27B0"/>
    </Style>

    <Style x:Key="TealRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#26A69A"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#009688"/>
    </Style>

    <Style x:Key="PinkRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#EC407A"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#E91E63"/>
    </Style>

    <Style x:Key="BrownRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#8D6E63"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#795548"/>
    </Style>

    <Style x:Key="CyanRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#26C6DA"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#00BCD4"/>
    </Style>

    <Style x:Key="LimeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background" Value="#9CCC65"/>
        <Setter Property="Foreground" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="#8BC34A"/>
    </Style>

</ResourceDictionary>