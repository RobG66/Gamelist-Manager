<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================ -->
    <!-- WINDOW AND GENERAL COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FCF8F5"/> <!-- Milky cream -->
    <SolidColorBrush x:Key="BorderBrush" Color="#DBC0B8"/> <!-- Muted clay -->

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#54413E"/> <!-- Warm charcoal -->
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8C7470"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#C7B8B5"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="White"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#C9A69D"/>
    <SolidColorBrush x:Key="ActiveBorderBrush" Color="#B08378"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#E8DCD9"/>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FCF8F5"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5EBE6"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F0DFD8"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="#E5CDC4"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#F0F0F0"/>

    <!-- Accent/Selection -->
    <SolidColorBrush x:Key="AccentBrush" Color="#D18C72"/> <!-- Muted terracotta -->
    <SolidColorBrush x:Key="SelectedBrush" Color="#EBD6CD"/>

    <!-- ============================================ -->
    <!-- APPLICATION-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="MainGridBackgroundBrush" Color="Transparent"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FCF8F5"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="Menu.Static.Background" Color="#F5EBE6"/>
    <SolidColorBrush x:Key="Menu.Static.Border" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="Menu.Static.Separator" Color="#E8DCD9"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#EBD6CD"/>
    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#D18C72"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#F0DFD8"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#D18C72"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Background" Color="#0A000000"/>
    <SolidColorBrush x:Key="MenuItem.Highlight.Disabled.Border" Color="#21000000"/>
    <SolidColorBrush x:Key="Menu.Disabled.Foreground" Color="#C7B8B5"/>

    <!-- Ribbon Colors -->
    <SolidColorBrush x:Key="RibbonBackgroundBrush" Color="#FAF3F0"/>
    <SolidColorBrush x:Key="RibbonForegroundBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="RibbonBorderBrush" Color="#DBC0B8"/>

    <!-- Ribbon Tab Colors -->
    <SolidColorBrush x:Key="RibbonTabHoverBackground" Color="#F0DFD8"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBackground" Color="#FCF8F5"/>
    <SolidColorBrush x:Key="RibbonTabSelectedBorder" Color="#D18C72"/>

    <!-- Ribbon Button Colors -->
    <SolidColorBrush x:Key="RibbonButtonHoverBackground" Color="#F5E2DB"/>
    <SolidColorBrush x:Key="RibbonButtonHoverBorder" Color="#DAB3A7"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBackground" Color="#EACBC0"/>
    <SolidColorBrush x:Key="RibbonButtonPressedBorder" Color="#C59183"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBackground" Color="#EACBC0"/>
    <SolidColorBrush x:Key="RibbonButtonCheckedBorder" Color="#C59183"/>

    <!-- Ribbon Group Colors -->
    <SolidColorBrush x:Key="RibbonGroupBorder" Color="#E8DCD9"/>
    <SolidColorBrush x:Key="RibbonGroupLabelBackground" Color="#F5EBE6"/>

    <!-- Ribbon Separator -->
    <SolidColorBrush x:Key="RibbonSeparatorBrush" Color="#E8DCD9"/>

    <!-- Ribbon Application Menu -->
    <SolidColorBrush x:Key="RibbonApplicationMenuBackground" Color="#B06D55"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuBorder" Color="#8C523D"/>
    <SolidColorBrush x:Key="RibbonApplicationMenuForeground" Color="#FCF8F5"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FCF8F5"/>
    <SolidColorBrush x:Key="DataGridForegroundBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="DataGridNewItemBrush" Color="#A37B67"/>
    <SolidColorBrush x:Key="DataGridMissingItemBrush" Color="#C27A7A"/>
    <SolidColorBrush x:Key="RowHoverBackgroundBrush" Color="#F0DFD8"/>

    <!-- Status Bar -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#E8DCD9"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#8C7470"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F5E7E1"/>
    <SolidColorBrush x:Key="PanelForegroundBrush" Color="#54413E"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#DBC0B8"/>

    <!-- Filter Panel -->
    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="#F5E7E1"/>

    <!-- Info Card Colors -->
    <SolidColorBrush x:Key="TotalCardBackgroundBrush" Color="#B06D55"/>
    <SolidColorBrush x:Key="HiddenCardBackgroundBrush" Color="#C49A6C"/>
    <SolidColorBrush x:Key="ShowingCardBackgroundBrush" Color="#8A9678"/>
    <SolidColorBrush x:Key="FavoriteCardBackgroundBrush" Color="#A388AD"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="White"/>

    <!-- DAT / Gamelist / Report Summary -->
    <SolidColorBrush x:Key="DatSummaryBackgroundBrush" Color="#FAF0ED"/>
    <SolidColorBrush x:Key="DatSummaryBorderBrush" Color="#E8D2C9"/>
    <SolidColorBrush x:Key="DatSummaryHeaderBrush" Color="#B06D55"/>
    <SolidColorBrush x:Key="DatSummaryAccentBrush" Color="#8C523D"/>
    <SolidColorBrush x:Key="GamelistSummaryBackgroundBrush" Color="#FBF6F2"/>
    <SolidColorBrush x:Key="GamelistSummaryBorderBrush" Color="#D8B7AA"/>
    <SolidColorBrush x:Key="GamelistSummaryHeaderBrush" Color="#B06D55"/>
    <SolidColorBrush x:Key="GamelistSummaryAccentBrush" Color="#8C523D"/>
    <SolidColorBrush x:Key="ReportSummaryBackgroundBrush" Color="#FFF5F0"/>
    <SolidColorBrush x:Key="ReportSummaryBorderBrush" Color="#E8D2C9"/>
    <SolidColorBrush x:Key="ReportSummaryHeaderBrush" Color="#B06D55"/>

    <!-- ============================================ -->
    <!-- CONTROL-SPECIFIC COLORS -->
    <!-- ============================================ -->

    <!-- ProgressBar -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#F5EBE6"/>
    <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#D18C72"/>
    <SolidColorBrush x:Key="ProgressBarIndicatorBrush" Color="#D18C72"/>
    <SolidColorBrush x:Key="ProgressBarSuccessBrush" Color="#A37B67"/>
    <SolidColorBrush x:Key="ProgressBarWarningBrush" Color="#D18C72"/>
    <SolidColorBrush x:Key="ProgressBarErrorBrush" Color="#C27A7A"/>

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#54413E"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlightBrush" Color="#F0DFD8"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#EBD6CD"/>

    <!-- CheckBox -->
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#C9A69D"/>
    <SolidColorBrush x:Key="CheckBoxCheckedBrush" Color="#EBD6CD"/>
    <SolidColorBrush x:Key="CheckMarkBrush" Color="#54413E"/>

    <!-- RadioButton -->
    <SolidColorBrush x:Key="RadioButtonBorderBrush" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="RadioButtonDotBrush" Color="#54413E"/>

    <!-- Splitters -->
    <SolidColorBrush x:Key="SplitterGripBrush" Color="#DBC0B8"/>
    <SolidColorBrush x:Key="SplitterBrush" Color="#DBC0B8"/>

    <!-- Slider -->
    <SolidColorBrush x:Key="SliderTrackBrush" Color="#E8DCD9"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="#D18C72"/>

    <!-- ============================================ -->
    <!-- CONTROL STYLES -->
    <!-- ============================================ -->

    <!-- TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DataGridForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <!-- Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style x:Key="GreyRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F5E7E1" Offset="0"/>
                    <GradientStop Color="#E5CDC4" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#54413E"/>
        <Setter Property="BorderBrush" Value="#C9A69D"/>
    </Style>

    <Style x:Key="GreenRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#C7BDAE" Offset="0"/>
                    <GradientStop Color="#A37B67" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#6B4F3F"/>
    </Style>

    <Style x:Key="BlueRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D8C7C2" Offset="0"/>
                    <GradientStop Color="#A388AD" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#8C6473"/>
    </Style>

    <Style x:Key="OrangeRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F4C7B3" Offset="0"/>
                    <GradientStop Color="#D18C72" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#B06D55"/>
    </Style>

    <Style x:Key="YellowRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FCE2C8" Offset="0"/>
                    <GradientStop Color="#EBD6CD" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#D18C72"/>
    </Style>

    <Style x:Key="RedRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F2A89B" Offset="0"/>
                    <GradientStop Color="#C27A7A" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#A35151"/>
    </Style>

    <Style x:Key="PurpleRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#C49AA8" Offset="0"/>
                    <GradientStop Color="#A388AD" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#8C6473"/>
    </Style>

    <Style x:Key="TealRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#B9C5C1" Offset="0"/>
                    <GradientStop Color="#8A9678" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#6B7B66"/>
    </Style>

    <Style x:Key="PinkRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F2C7C3" Offset="0"/>
                    <GradientStop Color="#D18C72" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#B06D55"/>
    </Style>

    <Style x:Key="BrownRoundedButton" TargetType="Button" BasedOn="{StaticResource CustomRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D1B4A9" Offset="0"/>
                    <GradientStop Color="#B06D55" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#8C523D"/>
    </Style>

</ResourceDictionary>
