<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Red Button Style -->
    <Style x:Key="RedRoundedButton" TargetType="Button" BasedOn="{StaticResource GreyRoundedButton}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFA07A" Offset="0"/>
                    <GradientStop Color="#FFCD5C5C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF4682B4"/>
    </Style>
</ResourceDictionary>
