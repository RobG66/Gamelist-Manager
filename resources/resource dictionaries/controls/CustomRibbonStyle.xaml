                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style for RibbonSplitButton - Disabled State -->
    <Style x:Key="RibbonSplitButtonDisabledStyle" TargetType="RibbonSplitButton" BasedOn="{StaticResource {x:Type RibbonSplitButton}}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>