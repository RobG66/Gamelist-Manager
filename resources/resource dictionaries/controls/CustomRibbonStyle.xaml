            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style for RibbonMenuButton - Disabled State -->
    <Style x:Key="RibbonMenuButtonDisabledStyle" TargetType="RibbonMenuButton" BasedOn="{StaticResource {x:Type RibbonMenuButton}}">
        <Style.Triggers>
