<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Vertical GridSplitter Grip Style -->
    <Style x:Key="CustomSplitter" TargetType="{x:Type GridSplitter}">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Cursor" Value="SizeWE" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <!-- Grip as Three Dots -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Height="50">
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="0,2,0,2" />
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="0,2,0,2" />
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="0,2,0,2" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Vertical GridSplitter Style -->
    <Style x:Key="CusomVerticalGridSplitter" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource CustomSplitter}">
        <Setter Property="Width" Value="6" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Horizontal GridSplitter Grip Style -->
    <Style x:Key="CustomGridSplitterHorizontalGripStyle" TargetType="{x:Type GridSplitter}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Cursor" Value="SizeNS" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <!-- Grip as Three Dots -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Width="50">
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="2,0,2,0" />
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="2,0,2,0" />
                            <Ellipse Fill="Gray" Width="4" Height="4" Margin="2,0,2,0" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Horizontal GridSplitter Style -->
    <Style x:Key="CustomHorizontalGridSplitter" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource CustomSplitter}">
        <Setter Property="Height" Value="6" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>