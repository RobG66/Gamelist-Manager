<Window x:Class="GamelistManager.ScraperCredentialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamelistManager"
        mc:Ignorable="d"
        Title="Scraper Credentials"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Grid Margin="0">
        <Border Background="#FFA7D3F1" Padding="16">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Left form -->
                    <ColumnDefinition Width="*"/>
                    <!-- Right options -->
                </Grid.ColumnDefinitions>

                <!-- LEFT column: UserID, Password, Save/Close -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                    <!-- User ID -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,12" HorizontalAlignment="Left">
                        <TextBlock Text="UserID:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,8,0" Width="70"/>
                        <TextBox x:Name="textBox_UserID"
                                 Width="100"
                                 MaxLength="50"
                                 VerticalAlignment="Center"
                                 TextChanged="textBox_TextChanged"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,18" HorizontalAlignment="Left">
                        <TextBlock Text="Password:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,8,0" Width="70"/>
                        <TextBox x:Name="textBox_Password"
                                 Width="100"
                                 MaxLength="50"
                                 VerticalAlignment="Center"
                                 TextChanged="textBox_TextChanged"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button x:Name="button_Save"
                                Content="Save"
                                Style="{StaticResource GreenRoundedButton}"
                                Width="40"
                                Height="20"
                                Margin="0,0,12,0"
                                Click="Button_Save_Click"
                                IsEnabled="False"/>
                        <Button x:Name="button_Close"
                                Content="Close"
                                Style="{StaticResource GreyRoundedButton}"
                                Width="40"
                                Height="20"
                                Click="Button_Close_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- RIGHT column:  -->
                <StackPanel x:Name="stackPanel_ScreenScraperOptions" Grid.Column="1" Margin="0" Background="#FFA7D3F1">
                    <!-- Optional header text -->
                    <TextBlock Text="ScreenScraper Additional Options"
                               FontWeight="Bold"
                               FontSize="12"
                               Margin="0,0,0,0"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Top ComboBoxes -->
                            <RowDefinition Height="*"/>
                            <!-- CheckBox -->
                            <RowDefinition Height="*"/>
                            <!-- Listboxes + buttons -->
                            <RowDefinition Height="Auto"/>
                            <!-- Text below listboxes -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Top-left: Language -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="0,0,0,2" Grid.ColumnSpan="2">
                            <Label Content="Language:"/>
                            <ComboBox x:Name="comboBox_Language"
                                      Width="130"
                                      Margin="10,0,0,0"
                                      HorizontalAlignment="Left"
                                      SelectionChanged="comboBox_SelectionChanged"/>
                        </StackPanel>

                        <!-- Top-right: Region -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" Margin="0,0,0,2">
                            <Label Content="Primary Region:"/>
                            <ComboBox x:Name="comboBox_Region"
                                      Width="130"
                                      Margin="10,0,0,0"
                                      HorizontalAlignment="Left"
                                      SelectionChanged="comboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">
                            <CheckBox 
                                  x:Name="checkBox_GenreAlwaysEnglish"
                                  HorizontalAlignment="Left"
                                  Margin="10,5,5,5"
                                  VerticalAlignment="Center"
                                  Checked="checkBox_Checked"
                                  Unchecked="checkBox_Checked"
                                  ToolTip="Emulation Station built in collections are based on English genres"
                                  Content="Always scrape genre in English">
                            </CheckBox>
                            <CheckBox 
      x:Name="checkBox_ScrapeAnyMedia"
      HorizontalAlignment="Left"
      Margin="10,5,5,5"
      VerticalAlignment="Center"
      Checked="checkBox_Checked"
      Unchecked="checkBox_Checked"
      ToolTip="When no media is found for either primary or fallback regions, if there is other media available then download that" 
      Content="Scrape any available media not found for regions">
                            </CheckBox>
                        </StackPanel>
                        <!-- Bottom: Split listboxes and buttons -->
                        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- Available -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Add/Remove buttons -->
                                <ColumnDefinition Width="*"/>
                                <!-- Selected -->
                            </Grid.ColumnDefinitions>

                            <!-- Available regions -->
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Available Regions:" FontWeight="SemiBold" Margin="0,0,0,4" FontSize="12"/>
                                <ListBox x:Name="listBoxAvailableRegions"
                                         Height="150"
                                         HorizontalAlignment="Stretch"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         SelectionMode="Extended"/>
                            </StackPanel>

                            <!-- Add / Remove buttons -->
                            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="5,0">
                                <Button x:Name="button_Add"
                                        Click="Button_Add_Click"
                                        Style="{StaticResource AnimatedTransparentButton}" 
                                        Width="20" Height="20" Margin="0,0,0,3">
                                    <Image Source="/GamelistManager;component/Resources/buttons/blueright.png"/>
                                </Button>
                                <Button x:Name="button_Remove"
                                        Click="Button_Remove_Click"
                                        Style="{StaticResource AnimatedTransparentButton}" 
                                        Width="20" Height="20" Margin="0,3,0,0">
                                    <Image Source="/GamelistManager;component/Resources/buttons/blueleft.png"/>
                                </Button>
                            </StackPanel>

                            <!-- Selected regions / fallback order -->
                            <StackPanel Grid.Column="2" Orientation="Vertical">
                                <TextBlock Text="Fallback Regions:" FontWeight="SemiBold" Margin="0,0,0,4" FontSize="12"/>
                                <ListBox x:Name="listBoxSelectedRegions"
                                         Height="150"
                                         HorizontalAlignment="Stretch"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         SelectionMode="Extended"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                                    <Button x:Name="button_Up"
                                            Click="Button_Up_Click"
                                            Style="{StaticResource AnimatedTransparentButton}" 
                                            Width="20" Height="20" Margin="0,0,3,0">
                                        <Image Source="/GamelistManager;component/Resources/buttons/blueup.png"/>
                                    </Button>
                                    <Button x:Name="button_Down"
                                            Click="Button_Down_Click"
                                            Style="{StaticResource AnimatedTransparentButton}" 
                                            Width="20" Height="20" Margin="3,0,0,0">
                                        <Image Source="/GamelistManager;component/Resources/buttons/bluedown.png"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Text below listboxes, spanning both columns -->
                        <TextBlock Grid.Row="3" Grid.ColumnSpan="3" 
                                   Text="The primary region is always first when scraping"
                                   FontStyle="Italic"
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
