<Window x:Class="GamelistManager.SettingsDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="650" Height="555"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/backgrounds/gears.png"
                        Opacity="0.08"
                        Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Settings Panel -->
        <StackPanel Grid.Column="0" Margin="5,0,10,0">
            <GroupBox Header="Batocera Host Connection" Margin="0,0,0,10" Foreground="{DynamicResource AccentBrush}">
                <StackPanel Margin="5">
                    <Label Content="Hostname:" />
                    <TextBox x:Name="textBox_HostName" Height="20" MaxLength="50" Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />

                    <Label Content="User ID:" Margin="0,5,0,0"/>
                    <TextBox x:Name="textBox_UserID" Height="20" MaxLength="50" Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />

                    <Label Content="Password:" Margin="0,5,0,0"/>
                    <TextBox x:Name="textBox_Password" Height="20" MaxLength="50" Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Appearance" Margin="0,0,0,10" Foreground="{DynamicResource AccentBrush}">
                <StackPanel Margin="5">
                    <Label Content="Theme:" />
                    <ComboBox x:Name="comboBox_Theme" Height="20" Style="{DynamicResource CustomComboBox}" SelectionChanged="ComboBox_Theme_SelectionChanged">
                        <ComboBoxItem Content="Default" Tag="Silver"/>
                        <ComboBoxItem Content="Blue" Tag="Azure"/>
                        <ComboBoxItem Content="Dark" Tag="Black"/>
                        <ComboBoxItem Content="Cool" Tag="AliceBlue"/>
                        <ComboBoxItem Content="Warm" Tag="WhiteSmoke"/>
                    </ComboBox>

                    <Label Content="Alternating Row Color:" Margin="0,5,0,0" />
                    <ComboBox x:Name="comboBox_AlternatingRowColor" Height="20" Style="{DynamicResource CustomComboBox}" SelectionChanged="ComboBox_AlternatingRowColor_SelectionChanged"/>

                    <Label Content="Line Visibility:" Margin="0,5,0,0" />
                    <ComboBox x:Name="comboBox_GridLinesVisibility" Height="20" Style="{DynamicResource CustomComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Horizontal" IsSelected="True" />
                        <ComboBoxItem Content="Vertical" />
                        <ComboBoxItem Content="All" />
                        <ComboBoxItem Content="None" />
                    </ComboBox>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="MAME Path" Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,5">
                <Grid Margin="5,0,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="textBox_MamePath" Grid.Column="0" Height="20"
                             Style="{DynamicResource CustomTextBox}"
                             VerticalAlignment="Center"
                             MaxLength="150"
                             TextChanged="TextBox_TextChanged"/>
                    <Button x:Name="button_FindMame"
                            Grid.Column="1"
                            Width="26" Height="26"
                            Click="Button_FindMame_Click"
                            Style="{DynamicResource CustomImageButton}"
                            ToolTip="Browse for MAME">
                        <Image Source="/resources/icons/folder.png" Width="18" Height="18"/>
                    </Button>
                </Grid>
            </GroupBox>

            <!-- Save / Close -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="button_Save" Content="Save" Style="{DynamicResource GreenRoundedButton}"
                        Width="70" Margin="0,0,5,0" Height="20" Click="ButtonSave_Click" IsEnabled="False"/>
                <Button x:Name="button_Close" Content="Close" Style="{DynamicResource GreyRoundedButton}"
                        Width="70" Margin="5,0,0,0" Height="20" Click="ButtonClose_Click"/>
            </StackPanel>

            <TextBlock TextWrapping="Wrap" FontStyle="Italic" Margin="5,5,0,0" Text="Change Tracking changes do not take effect until a new gamelist is loaded." VerticalAlignment="Top"/>

        </StackPanel>

        <!-- Right Settings Panel -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="0,0,5,0">
            <StackPanel>

                <GroupBox Header="Behavior Options" Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10">
                    <UniformGrid Columns="2" Rows="5" Margin="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox x:Name="checkBox_TrackChanges" Style="{DynamicResource CustomCheckBox}" Content="Track Changes" ToolTip="Keep track of changes for undo and redo purposes" VerticalAlignment="Center" Click="CheckBox_Click"/>
                            <TextBlock Text=" - Max:" VerticalAlignment="Center" />
                            <TextBox x:Name="textBox_MaxUndo" Text="15" VerticalAlignment="Center" Width="30" Height="20" Style="{DynamicResource CustomTextBox}" Margin="5,0,0,0"
                                     MaxLength="2" PreviewTextInput="NumericTextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
                                     DataObject.Pasting="NumericTextBox_Pasting"/>
                        </StackPanel>
                        <CheckBox x:Name="checkBox_VideoAutoplay" Style="{DynamicResource CustomCheckBox}" Content="Autoplay Videos" ToolTip="Videos in the media display will automatically play or not" VerticalAlignment="Center" Click="CheckBox_Click" />
                        <CheckBox x:Name="checkBox_ConfirmBulkChanges" Style="{DynamicResource CustomCheckBox}" Content="Confirm Bulk Changes" ToolTip="Major changes will requiring confirmation" VerticalAlignment="Center" Click="CheckBox_Click" />
                        <CheckBox x:Name="checkBox_EnableSaveReminder" Style="{DynamicResource CustomCheckBox}" Content="Enable Save Reminder" ToolTip="If changes are about to be lost, ask to save first" VerticalAlignment="Center" Click="CheckBox_Click" />
                        <CheckBox x:Name="checkBox_VerifyImageDownloads" Style="{DynamicResource CustomCheckBox}" VerticalAlignment="Center" ToolTip="Scraped images are verified to be non-corrupt and not single color as they are downloaded" Content="Verify Image Downloads" Click="CheckBox_Click"/>
                        <CheckBox x:Name="checkBox_ShowFileStatusBar" Style="{DynamicResource CustomCheckBox}" VerticalAlignment="Center" ToolTip="Displays the gamelist filename and modification time at the bottom of the datagrid" Click="CheckBox_Click" Content="Show File Statusbar" />
                        <CheckBox x:Name="checkBox_RememberColumns" Style="{DynamicResource CustomCheckBox}" VerticalAlignment="Center" ToolTip="Changes to column visibility will be retained until changed again" Content="Remember Displayed Columns" Click="CheckBox_Click"/>
                        <CheckBox x:Name="checkBox_RememberAutosize" Style="{DynamicResource CustomCheckBox}" VerticalAlignment="Center" ToolTip="Remember column autosize settings" Content="Remember Column Autosize" Click="CheckBox_Click"/>
                        <CheckBox x:Name="checkBox_AutoExpandLogger" Style="{DynamicResource CustomCheckBox}" VerticalAlignment="Center" ToolTip="Automatically expand the logger size when scraping" Content="Auto Expand Logger When Scraping" Click="CheckBox_Click"/>
                    </UniformGrid>
                </GroupBox>

                <GroupBox Header="Other Settings" Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="File Search Depth (0–9):" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBox_SearchDepth" Text="2" Width="30" Height="20" Margin="10,0,0,0"
                                 Style="{DynamicResource CustomTextBox}"                                 
                                 MaxLength="1" PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="TextBox_TextChanged"    
                                 DataObject.Pasting="NumericTextBox_Pasting"/>
                            <TextBlock Text="  |  " Margin="10,0,10,0" VerticalAlignment="Top"/>
                            <TextBlock Text="Default Volume:" VerticalAlignment="Center"/>
                            <Slider x:Name="sliderVolumeSetting" Minimum="0" Maximum="100" Width="100" Margin="5,0,0,0"
                                PreviewMouseDown="SliderVolumeSetting_PreviewMouseDown"
                                Style="{DynamicResource CustomSlider}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                            <TextBlock Text="Remember last" VerticalAlignment="Center" />
                            <TextBox x:Name="textBox_RecentFilesCount" Text="15" VerticalAlignment="Center" Width="30" Height="20" Style="{DynamicResource CustomTextBox}" Margin="5,0,5,0"
              MaxLength="2" PreviewTextInput="NumericTextBox_PreviewTextInput"
                                     TextChanged="TextBox_TextChanged"
              DataObject.Pasting="NumericTextBox_Pasting"/>
                            <TextBlock Text="files (1-50)" VerticalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Folder Paths" Foreground="{DynamicResource AccentBrush}">
                    <Grid Margin="5" x:Name="Paths">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Column 1 -->
                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Image:" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="textBox_image" Height="20" Style="{DynamicResource CustomTextBox}"  VerticalAlignment="Center" Tag="image"/>

                        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Titleshot:" />
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="textBox_titleshot" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="titleshot" />

                        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Marquee:" />
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="textBox_marquee" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="marquee" />

                        <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="Wheel:" />
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="textBox_wheel" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="wheel" />

                        <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Content="Thumbnail:" />
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="textBox_thumbnail" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="thumbnail" />

                        <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Content="Cartridge:" />
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="textBox_cartridge" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="cartridge" />

                        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Content="Video:" />
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="textBox_video" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="video" />

                        <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Content="Music:" />
                        <TextBox Grid.Row="7" Grid.Column="1" x:Name="textBox_music" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="music" />

                        <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Content="Map:" />
                        <TextBox Grid.Row="8" Grid.Column="1" x:Name="textBox_map" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="map" />

                        <!-- Column 2 -->
                        <Label Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Content="Bezel:" />
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="textBox_bezel" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="bezel" />

                        <Label Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Content="Manual:" />
                        <TextBox Grid.Row="1" Grid.Column="3" x:Name="textBox_manual" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="manual" />

                        <Label Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Content="Fan Art:" />
                        <TextBox Grid.Row="2" Grid.Column="3" x:Name="textBox_fanart" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="fanart" />

                        <Label Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Content="Box Art:" />
                        <TextBox Grid.Row="3" Grid.Column="3" x:Name="textBox_boxart" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="boxart" />

                        <Label Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Content="Box Back:" />
                        <TextBox Grid.Row="4" Grid.Column="3" x:Name="textBox_boxback" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="boxback" />

                        <Label Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Content="Magazine:" />
                        <TextBox Grid.Row="5" Grid.Column="3" x:Name="textBox_magazine" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="magazine" />

                        <Label Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" Content="Mix:" />
                        <TextBox Grid.Row="6" Grid.Column="3" x:Name="textBox_mix" Height="20" Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" Tag="mix" />

                        <Button Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" Grid.ColumnSpan="2"
                                Content="Reset Folder Paths"
                                Style="{DynamicResource GreyRoundedButton}"
                                Width="100" Height="20" Click="Button_Reset_Click"
                                HorizontalAlignment="Center" Margin="0,0,0,0"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
