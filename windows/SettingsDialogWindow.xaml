<Window x:Class="GamelistManager.SettingsDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="650" Height="575"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/resources/images/backgrounds/gears.png"
                        Opacity="0.08"
                        Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Settings Panel -->
        <StackPanel Grid.Column="0" Margin="5,5,10,0">
            <!-- Batocera Host Connection -->
            <Border Background="{DynamicResource ControlBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="5" 
                    Margin="0,0,0,10"
                    BorderBrush="{DynamicResource AccentBrush}" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Batocera Host Connection" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               Margin="0,0,0,8"/>

                    <Label Content="Hostname:" Padding="0,0,0,2"/>
                    <TextBox x:Name="textBox_HostName" Height="20" MaxLength="50" 
                             Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />

                    <Label Content="User ID:" Margin="0,8,0,2" Padding="0,0,0,2"/>
                    <TextBox x:Name="textBox_UserID" Height="20" MaxLength="50" 
                             Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />

                    <Label Content="Password:" Margin="0,8,0,2" Padding="0,0,0,2"/>
                    <TextBox x:Name="textBox_Password" Height="20" MaxLength="50" 
                             Style="{DynamicResource CustomTextBox}" TextChanged="TextBox_TextChanged" />
                </StackPanel>
            </Border>

            <!-- Appearance -->
            <Border Background="{DynamicResource ControlBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="5" 
                    Margin="0,0,0,10"
                    BorderBrush="{DynamicResource AccentBrush}" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Appearance" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               Margin="0,0,0,8"/>

                    <Label Content="Theme:" Padding="0,0,0,2"/>
                    <ComboBox x:Name="comboBox_Theme" Height="20" 
                              Style="{DynamicResource CustomComboBox}">
                        <ComboBoxItem Content="Default" Tag="Silver"/>
                        <ComboBoxItem Content="Blue" Tag="Azure"/>
                        <ComboBoxItem Content="Cool" Tag="AliceBlue"/>
                        <ComboBoxItem Content="Gray" Tag="LightGray"/>
                        <ComboBoxItem Content="Mint" Tag="AliceBlue"/>
                        <ComboBoxItem Content="Sandy" Tag="Tan"/>
                        <ComboBoxItem Content="Sunset" Tag="SeaShell"/>
                        <ComboBoxItem Content="Warm" Tag="WhiteSmoke"/>
                    </ComboBox>

                    <Label Content="Alternating Row Color:" Margin="0,8,0,2" Padding="0,0,0,2"/>
                    <ComboBox x:Name="comboBox_AlternatingRowColor" Height="20" 
                              Style="{DynamicResource CustomComboBox}"/>

                    <Label Content="Line Visibility:" Margin="0,8,0,2" Padding="0,0,0,2"/>
                    <ComboBox x:Name="comboBox_GridLinesVisibility" Height="20" 
                              Style="{DynamicResource CustomComboBox}">
                        <ComboBoxItem Content="Horizontal" IsSelected="True" />
                        <ComboBoxItem Content="Vertical" />
                        <ComboBoxItem Content="All" />
                        <ComboBoxItem Content="None" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- MAME Path -->
            <Border Background="{DynamicResource ControlBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="5" 
                    Margin="0,0,0,10"
                    BorderBrush="{DynamicResource AccentBrush}" 
                    BorderThickness="1">
                    <StackPanel>

                        <!-- Section Header -->
                    <TextBlock Text="Paths" 
                  FontWeight="SemiBold" 
                  Foreground="{DynamicResource AccentBrush}" 
                  Margin="0,0,0,8"/>

                    <!-- MAME EXE PATH -->
                        <StackPanel>
                        <Label Content="Mame.exe Path :" Padding="0,0,0,2"/>

                        <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="textBox_MamePath"
                         Grid.Column="0"
                         Height="20"
                         Style="{DynamicResource CustomTextBox}"
                         VerticalAlignment="Center"
                         MaxLength="150"
                         TextChanged="TextBox_TextChanged"/>

                                <Button x:Name="button_FindMame"
                        Grid.Column="1"
                        Width="26"
                        Height="26"
                        Margin="5,0,0,0"
                        Click="Button_FindMame_Click"
                        Style="{DynamicResource CustomImageButton}"
                        ToolTip="Browse for MAME">
                                    <Image Source="pack://application:,,,/resources/images/icons/folder.png"
                           Width="18"
                           Height="18"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Spacer -->
                        <Border Height="12" Background="Transparent"/>

                        <!-- ROMS PATH -->
                        <StackPanel>
                        <Label Content="Roms Path :" Padding="0,0,0,2"/>

                        <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="textBox_RomsFolder"
                         Grid.Column="0"
                         Height="20"
                         Style="{DynamicResource CustomTextBox}"
                         VerticalAlignment="Center"
                         MaxLength="150"
                         TextChanged="TextBox_TextChanged"/>

                                <Button x:Name="button_FindRoms"
                        Grid.Column="1"
                        Width="26"
                        Height="26"
                        Margin="5,0,0,0"
                        Click="Button_FindRoms_Click"
                        Style="{DynamicResource CustomImageButton}"
                        ToolTip="Browse for ROMs folder">
                                    <Image Source="pack://application:,,,/resources/images/icons/folder.png"
                           Width="18"
                           Height="18"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
            
            </Border>

            <!-- Save / Close -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="button_Save" Content="Save" 
                        Style="{DynamicResource GreenRoundedButton}"
                        Width="70" Margin="0,0,5,0" Height="20" 
                        Click="ButtonSave_Click" IsEnabled="False"/>
                <Button x:Name="button_Close" Content="Close" 
                        Style="{DynamicResource GreyRoundedButton}"
                        Width="70" Margin="5,0,0,0" Height="20" 
                        Click="ButtonClose_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- Right Settings Panel -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="0,5,5,0">
            <StackPanel>

                <!-- Behavior Options -->
                <Border Background="{DynamicResource ControlBackgroundBrush}" 
        CornerRadius="8" 
        Padding="5" 
        Margin="0,0,0,10"
        BorderBrush="{DynamicResource AccentBrush}" 
        BorderThickness="1">

                    <StackPanel>

                        <TextBlock Text="Option Settings" 
                   FontWeight="SemiBold" 
                   Foreground="{DynamicResource AccentBrush}" 
                   Margin="0,0,0,5"/>

                        <UniformGrid Columns="2" Rows="7">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                                <CheckBox x:Name="checkBox_TrackChanges" 
                          Style="{DynamicResource CustomCheckBox}" 
                          Content="Track Changes" 
                          ToolTip="Keep track of changes for undo and redo purposes" 
                          VerticalAlignment="Center" 
                          Click="CheckBox_Click"/>
                                <TextBlock Text=" - Max:" VerticalAlignment="Center" />
                                <TextBox x:Name="textBox_MaxUndo" Text="15" 
                         VerticalAlignment="Center" Width="30" Height="20" 
                         Style="{DynamicResource CustomTextBox}" Margin="5,0,0,0"
                         MaxLength="2" PreviewTextInput="NumericTextBox_PreviewTextInput"
                         TextChanged="TextBox_TextChanged"
                         DataObject.Pasting="NumericTextBox_Pasting"/>
                            </StackPanel>

                            <CheckBox x:Name="checkBox_VideoAutoplay" 
                      Style="{DynamicResource CustomCheckBox}" 
                      Content="Autoplay Videos" 
                      ToolTip="Videos in the media display will automatically play or not" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      Click="CheckBox_Click" />

                            <CheckBox x:Name="checkBox_ConfirmBulkChanges" 
                      Style="{DynamicResource CustomCheckBox}" 
                      Content="Confirm Bulk Changes" 
                      ToolTip="Major changes will requiring confirmation" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      Click="CheckBox_Click" />

                            <CheckBox x:Name="checkBox_EnableSaveReminder" 
                      Style="{DynamicResource CustomCheckBox}" 
                      Content="Enable Save Reminder" 
                      ToolTip="If changes are about to be lost, ask to save first" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      Click="CheckBox_Click" />

                            <CheckBox x:Name="checkBox_VerifyImageDownloads" 
                      Style="{DynamicResource CustomCheckBox}" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      ToolTip="Scraped images are verified to be non-corrupt and not single color as they are downloaded" 
                      Content="Verify Image Downloads" 
                      Click="CheckBox_Click"/>

                            <CheckBox x:Name="checkBox_ShowFileStatusBar" 
                      Style="{DynamicResource CustomCheckBox}" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      ToolTip="Displays the gamelist filename and modification time at the bottom of the datagrid" 
                      Click="CheckBox_Click" 
                      Content="Show File Statusbar" />

                            <CheckBox x:Name="checkBox_RememberColumns" 
                      Style="{DynamicResource CustomCheckBox}" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      ToolTip="Changes to column visibility will be retained until changed again" 
                      Content="Remember Displayed Columns" 
                      Click="CheckBox_Click"/>

                            <CheckBox x:Name="checkBox_RememberAutosize" 
                      Style="{DynamicResource CustomCheckBox}" 
                      VerticalAlignment="Center" 
                      Margin="0,0,0,5"
                      ToolTip="Remember column autosize settings" 
                      Content="Remember Column Autosize" 
                      Click="CheckBox_Click"/>

                            <CheckBox x:Name="checkBox_AutoExpandLogger" 
                      Style="{DynamicResource CustomCheckBox}" 
                      VerticalAlignment="Center" 
                      ToolTip="Automatically expand the logger size when scraping" 
                      Content="Auto Expand Logger When Scraping" 
                      Click="CheckBox_Click"/>

                            <CheckBox x:Name="checkBox_EnableDelete" 
                        Style="{DynamicResource CustomCheckBox}" 
                        VerticalAlignment="Center" 
                        ToolTip="Enable the ability to delete items permanently" 
                        Content="Enable Item Deletion" 
                        Click="CheckBox_Click"/>

                            <CheckBox x:Name="checkBox_IgnoreDuplicates" 
                         Style="{DynamicResource CustomCheckBox}" 
                         VerticalAlignment="Center" 
                         ToolTip="Duplicate items are ignored when loading a gamelist" 
                         Content="Ignore Gamelist Item Duplicates" 
                         Click="CheckBox_Click"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                                <CheckBox x:Name="checkBox_BatchProcessing" 
                                Style="{DynamicResource CustomCheckBox}" 
                                
                                Content="ArcadeDB Batch Scrape:" 
                                ToolTip="ArcadeDB batch scraping size (50-300)" 
                                VerticalAlignment="Center" 
                                Click="CheckBox_Click"/>
                                <TextBox x:Name="textBox_MaxBatch" Text="300" 
                                VerticalAlignment="Center" Width="35" Height="20" 
                                   Style="{DynamicResource CustomTextBox}" Margin="5,0,0,0"
                                   MaxLength="3" PreviewTextInput="NumericTextBox_PreviewTextInput"
                                   TextChanged="TextBox_TextChanged"
                                   ToolTip="50 - 300"
                                   DataObject.Pasting="NumericTextBox_Pasting"/>
                                    </StackPanel>


                        </UniformGrid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,8">
                            <TextBlock Text="New Item Search Depth:" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBox_SearchDepth" Text="2" Width="20" Height="20" Margin="5,0,0,0"
                     Style="{DynamicResource CustomTextBox}"
                     MaxLength="1"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     TextChanged="TextBox_TextChanged"    
                     DataObject.Pasting="NumericTextBox_Pasting"/>
                            <TextBlock Text="(0-9)" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Text="Default Volume:" Margin="30,0,0,0" VerticalAlignment="Center"/>
                            <Slider x:Name="sliderVolumeSetting" Minimum="0" Maximum="100" Width="100" Margin="5,0,0,0"
                    PreviewMouseDown="SliderVolumeSetting_PreviewMouseDown"
                    Style="{DynamicResource CustomSlider}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Recent File History:" VerticalAlignment="Center" />
                            <TextBox x:Name="textBox_RecentFilesCount" Text="15" 
                     VerticalAlignment="Center" Width="30" Height="20" 
                     Style="{DynamicResource CustomTextBox}" Margin="5,0,5,0"
                     MaxLength="2" PreviewTextInput="NumericTextBox_PreviewTextInput"
                     TextChanged="TextBox_TextChanged"
                     DataObject.Pasting="NumericTextBox_Pasting"/>
                            <TextBlock Text="(1-50)" VerticalAlignment="Center"/>
                            <TextBlock Text="Log Verbosity:" Margin="40,0,0,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboBox_LogVerbosity" Height="20"
                                      MinWidth="110"
                                      Style="{DynamicResource CustomComboBox}" 
                                      Margin="5,0,0,0">
                                <ComboBoxItem Content="Downloads Only" Tag="0" IsSelected="True" />
                                <ComboBoxItem Content="Moderate" Tag="1"/>
                                <ComboBoxItem Content="All" Tag="2"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Folder Paths -->
                <Border Background="{DynamicResource ControlBackgroundBrush}" 
        CornerRadius="8" 
        Padding="5" 
        Margin="0,0,0,10"
        BorderBrush="{DynamicResource AccentBrush}" 
        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Folder Paths" 
                   FontWeight="SemiBold" 
                   Foreground="{DynamicResource AccentBrush}" 
                   Margin="0,0,0,5"/>

                        <Grid x:Name="Paths">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Column 1 -->
                            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Image:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="textBox_image" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="image" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="0" Grid.Column="2" x:Name="checkBox_DisableImage"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_image}"
                      ToolTip="Disables Image media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Titleshot:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="textBox_titleshot" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="titleshot" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="1" Grid.Column="2" x:Name="checkBox_DisableTitleshot"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_titleshot}"
                      ToolTip="Disables Titleshot media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Marquee:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="textBox_marquee" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="marquee" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="2" Grid.Column="2" x:Name="checkBox_DisableMarquee"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_marquee}"
                      ToolTip="Disables Marquee media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="Wheel:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="textBox_wheel" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="wheel" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="3" Grid.Column="2" x:Name="checkBox_DisableWheel"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_wheel}"
                      ToolTip="Disables Wheel media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Content="Thumbnail:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="textBox_thumbnail" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="thumbnail" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="4" Grid.Column="2" x:Name="checkBox_DisableThumbnail"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_thumbnail}"
                      ToolTip="Disables Thumbnail media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Content="Cartridge:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="textBox_cartridge" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="cartridge" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="5" Grid.Column="2" x:Name="checkBox_DisableCartridge"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_cartridge}"
                      ToolTip="Disables Cartridge media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Content="Video:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="textBox_video" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="video" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="6" Grid.Column="2" x:Name="checkBox_DisableVideo"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_video}"
                      ToolTip="Disables Video media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Content="Music:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="textBox_music" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="music" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="7" Grid.Column="2" x:Name="checkBox_DisableMusic"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_music}"
                      ToolTip="Disables Music media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Content="Map:" Padding="0,0,5,0"/>
                            <TextBox Grid.Row="8" Grid.Column="1" x:Name="textBox_map" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="map" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="8" Grid.Column="2" x:Name="checkBox_DisableMap"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                       Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_map}"
                      ToolTip="Disables Map media if unchecked"
                      Click="CheckBox_Click"/>

                            <!-- Column 2 -->
                            <Label Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Content="Bezel:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="0" Grid.Column="4" x:Name="textBox_bezel" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="bezel" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="0" Grid.Column="5" x:Name="checkBox_DisableBezel"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_bezel}"
                      ToolTip="Disables Bezel media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Content="Manual:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="1" Grid.Column="4" x:Name="textBox_manual" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="manual" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="1" Grid.Column="5" x:Name="checkBox_DisableManual"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_manual}"
                      ToolTip="Disables Manual media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Content="Fan Art:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="2" Grid.Column="4" x:Name="textBox_fanart" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="fanart" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="2" Grid.Column="5" x:Name="checkBox_DisableFanart"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_fanart}"
                      ToolTip="Disables Fan Art media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Content="Box Art:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="3" Grid.Column="4" x:Name="textBox_boxart" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="boxart" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="3" Grid.Column="5" x:Name="checkBox_DisableBoxart"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_boxart}"
                      ToolTip="Disables Box Art media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Content="Box Back:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="4" Grid.Column="4" x:Name="textBox_boxback" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="boxback" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="4" Grid.Column="5" x:Name="checkBox_DisableBoxback"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_boxback}"
                      ToolTip="Disables Box Back media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" Content="Magazine:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="5" Grid.Column="4" x:Name="textBox_magazine" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="magazine" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="5" Grid.Column="5" x:Name="checkBox_DisableMagazine"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_magazine}"
                      ToolTip="Disables Magazine media if unchecked"
                      Click="CheckBox_Click"/>

                            <Label Grid.Row="6" Grid.Column="3" VerticalAlignment="Center" Content="Mix:" Padding="5,0,5,0"/>
                            <TextBox Grid.Row="6" Grid.Column="4" x:Name="textBox_mix" Height="20" 
                     Style="{DynamicResource CustomTextBox}" VerticalAlignment="Center" 
                     Tag="mix" Margin="0,0,0,3"/>
                            <CheckBox Grid.Row="6" Grid.Column="5" x:Name="checkBox_DisableMix"
                      Style="{DynamicResource CustomCheckBox}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,3"
                      Tag="{Binding Tag, ElementName=textBox_mix}"
                      ToolTip="Disables Mix media if unchecked"
                      Click="CheckBox_Click"/>

                            <Button Grid.Row="8" Grid.Column="4" VerticalAlignment="Center"
                    Content="Reset Folder Paths"
                    Style="{DynamicResource GreyRoundedButton}"
                    Width="120" Height="20" Click="Button_Reset_Click"
                    HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>