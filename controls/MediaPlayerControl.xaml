<UserControl x:Class="GamelistManager.controls.MediaPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             mc:Ignorable="d" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!-- Video Playback Area -->
        <Grid Grid.Row="0" Background="Black" x:Name="VideoContainer">
            <vlc:VideoView x:Name="VideoView"/>
        </Grid>

        <!-- File Selector -->
        <Border Grid.Row="1" Background="Black">
            <ComboBox x:Name="comboBox_CurrentTrack"
              Style="{StaticResource CustomComboBox}"
              VirtualizingPanel.IsVirtualizing="True"
              VirtualizingPanel.VirtualizationMode="Recycling"
              HorizontalAlignment="Center"
              Visibility="Collapsed" />
        </Border>
        <!-- Bottom Control Bar -->

        <Grid Grid.Row="2" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="button_Playlist"
            Style="{StaticResource CustomImageButton}"
            ToolTip="Show File Picker"
            Click="button_Playlist_Click"
            Margin="5,3,5,3"
            Visibility="Visible"
            Grid.Column="0"
            HorizontalAlignment="Left">
                <Image Source="pack://application:,,,/resources/images/buttons/glossybutton.png" />
            </Button>

            <CheckBox x:Name="checkBox_Randomize"
              Content="Random"
              Style="{StaticResource CustomCheckBox}"
              VerticalAlignment="Center"
              Click="checkBox_Randomize_Click"
              Margin="5,0,5,0"
              Grid.Column="1"
              Visibility="Visible"
              ToolTip="Randomize Playback"
              HorizontalAlignment="Left">
            </CheckBox>

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="2">
                <Button x:Name="button_Previous"
                Style="{StaticResource CustomImageButton}"
                Margin="5,3,5,3"
                IsEnabled="False"
                Click="Button_Click">
                    <Image Source="pack://application:,,,/resources/images/buttons/previous.png" ToolTip="Previous" />
                </Button>
                <Button x:Name="button_Pause"
                Style="{StaticResource CustomImageButton}"
                Margin="0,3,5,3"
                IsEnabled="False"
                Click="Button_Click">
                    <Image Source="pack://application:,,,/resources/images/buttons/pause.png" ToolTip="Pause" />
                </Button>
                <Button x:Name="button_Stop"
                Style="{StaticResource CustomImageButton}"
                Margin="0,3,5,3"
                IsEnabled="False"
                Click="Button_Click">
                    <Image Source="pack://application:,,,/resources/images/buttons/stop.png" ToolTip="Stop" />
                </Button>
                <Button x:Name="button_Play"
                Style="{StaticResource CustomImageButton}"
                Margin="0,3,5,3"
                IsEnabled="True"
                Click="Button_Click">
                    <Image Source="pack://application:,,,/resources/images/buttons/play.png" ToolTip="Play" />
                </Button>
                <Button x:Name="button_Next"
                Style="{StaticResource CustomImageButton}"
                Margin="0,3,5,3"
                IsEnabled="False"
                Click="Button_Click">
                    <Image Source="pack://application:,,,/resources/images/buttons/next.png" ToolTip="Next" />
                </Button>
            </StackPanel>

            <Slider Grid.Column="3"
            x:Name="sliderVolume"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Minimum="0"
            Maximum="100"
            Value="75"
            ToolTip="Volume"
            Width="100"
            Margin="10,0,10,0"
            Style="{StaticResource CustomSlider}"
            ValueChanged="Slider_ValueChanged"
            PreviewMouseDown="sliderVolume_PreviewMouseDown">
            </Slider>
        </Grid>

    </Grid>
</UserControl>
