<Page x:Class="GamelistManager.pages.DatToolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DAT Tool"
      Background="{DynamicResource PrimaryBackgroundBrush}">

    <Grid Margin="5,0,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- DAT Summary Panel -->
        <Border Grid.Column="0"
                Background="{DynamicResource DatSummaryBackgroundBrush}"
                BorderBrush="{DynamicResource DatSummaryBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,10,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,6" LastChildFill="True">
                    <TextBlock Text="📦 DAT Summary"
                               FontWeight="Bold"
                               Foreground="{DynamicResource DatSummaryHeaderBrush}"
                               FontSize="15"
                               VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Summary Content -->
                <StackPanel Grid.Row="1">
                    <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock FontWeight="SemiBold" Text="Total Items:" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock FontWeight="Bold" x:Name="text_DatTotal" Text="—"
                                   Foreground="{DynamicResource DatSummaryAccentBrush}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Parents:" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock x:Name="text_DatParents" Text="—" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Clones:" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock x:Name="text_DatClones" Text="—" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="CHD Required:" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock x:Name="text_DatCHD" Text="—" Grid.Row="3" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Playable:" Grid.Row="4" Grid.Column="0"/>
                        <TextBlock x:Name="text_DatPlayable" Text="—" Grid.Row="4" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Non-Playable:" Grid.Row="5" Grid.Column="0"/>
                        <TextBlock x:Name="text_DatNonPlayable" Text="—" Grid.Row="5" Grid.Column="1" Margin="5,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <Button x:Name="button_StreamFromMame"
                                Content="MAME Import"
                                Click="button_StreamFromMame_Click"
                                Style="{DynamicResource BlueRoundedButton}"
                                Height="20"
                                Width="75"
                                HorizontalAlignment="Center"/>

                        <Button x:Name="button_OpenDatFile"
                                Content="Open DAT File"
                                Click="button_OpenDatFile_Click"
                                Style="{DynamicResource GreenRoundedButton}"
                                Height="20"
                                Width="75"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Gamelist Summary Panel -->
        <Border Grid.Column="1"
                Background="{DynamicResource GamelistSummaryBackgroundBrush}"
                BorderBrush="{DynamicResource GamelistSummaryBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,10,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="🎮 Gamelist Summary"
                           FontWeight="Bold"
                           Foreground="{DynamicResource GamelistSummaryHeaderBrush}"
                           FontSize="15"
                           Margin="0,0,0,6"/>

                <Grid Margin="0,0,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock FontWeight="SemiBold" Text="Total Items:" Margin="0,0,5,0" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock FontWeight="Bold" x:Name="text_GamelistTotal" Text="—" 
                               Foreground="{DynamicResource GamelistSummaryAccentBrush}"
                               Grid.Row="0" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Text="Parents:" Grid.Row="1" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock x:Name="text_GamelistParents" Text="—" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Text="Clones:" Grid.Row="2" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock x:Name="text_GamelistClones" Text="—" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Text="CHD Required:" Grid.Row="3" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock x:Name="text_GamelistCHD" Text="—" Grid.Row="3" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Text="Non-working:" Grid.Row="4" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock x:Name="text_GamelistNonPlayable" Text="—" Grid.Row="4" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Visibility="Collapsed" Text="Missing Parents:" Grid.Row="5" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock Visibility="Collapsed" x:Name="text_GamelistMissingParents" Text="—" Grid.Row="5" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Visibility="Collapsed" Text="Missing Clones:" Grid.Row="6" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock Visibility="Collapsed" x:Name="text_GamelistMissingClones" Text="—" Grid.Row="6" Grid.Column="1" Margin="5,0,0,0"/>

                    <TextBlock Text="Not In DAT:" Grid.Row="7" Margin="0,0,5,0" Grid.Column="0"/>
                    <TextBlock x:Name="text_GamelistNotInDAT" Text="—" Grid.Row="7" Grid.Column="1" Margin="5,0,0,0"/>

                    <CheckBox Grid.Row="8" x:Name="checkBox_IncludeHidden"
                              Content="Include hidden items"
                              IsChecked="True"
                              IsEnabled="False"
                              VerticalAlignment="Center"
                              Style="{DynamicResource CustomCheckBox}"
                              Checked="checkBox_IncludeHidden_Checked"
                              Unchecked="checkBox_IncludeHidden_Checked"
                              Grid.ColumnSpan="2"                           
                              Margin="0,5,5,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Report Summary Panel (DataGrid Card) -->
        <Border Grid.Column="2"
                Background="{DynamicResource ReportSummaryBackgroundBrush}"
                BorderBrush="{DynamicResource ReportSummaryBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Direction="270"
                                  ShadowDepth="2"
                                  Opacity="0.2"
                                  BlurRadius="6"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with ComboBox -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                    <TextBlock Text="📊 Report Summary:"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ReportSummaryHeaderBrush}"
                               FontSize="15"/>
                    <ComboBox x:Name="comboBox_ReportView"
                              SelectionChanged="ComboBox_ReportView_SelectionChanged"
                              Style="{DynamicResource CustomComboBox}"
                              Width="140"
                              Margin="10,0,0,0"
                              SelectedIndex="0"
                              IsEnabled="False">
                        <ComboBoxItem Content="Select a Report" IsEnabled="True" FontStyle="Italic"/>
                        <ComboBoxItem FontWeight="SemiBold" Content="Parents"/>
                        <ComboBoxItem FontWeight="SemiBold" Content="Clones"/>
                        <ComboBoxItem FontWeight="SemiBold" Content="CHD Required"/>
                        <ComboBoxItem FontWeight="SemiBold" Content="Non Playable"/>
                        <ComboBoxItem FontWeight="SemiBold" Content="Not In DAT"/>
                    </ComboBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Style="{DynamicResource CustomImageButton}"
                                Name="button_CloseDATPage"
                                Height="20"
                                Width="20"
                                Margin="5,0,0,0"
                                ToolTip="Close DAT Summary Panel"
                                Click="button_DatPageClose_Click">
                            <Image Source="pack://application:,,,/resources/images/buttons/x-button.png" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- DAT File Info -->
                <StackPanel Grid.Row="1" Margin="0,0,0,8">
                    <TextBlock Text="Loaded DAT File:"
                               FontWeight="SemiBold"
                               Margin="0,0,0,3"/>
                    <TextBlock x:Name="textBlock_DatFileName"
                               Text="None"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Margin="0,0,0,8"/>

                    <!-- DAT Header Info -->
                    <TextBlock Text="DAT Information"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ReportSummaryHeaderBrush}"
                               FontSize="13"
                               Margin="0,0,0,4"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="text_DatInfoName" Text="—" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Version:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="text_DatInfoVersion" Text="—" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Author:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="text_DatInfoAuthor" Text="—" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Date:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="text_DatInfoDate" Text="—" Grid.Row="3" Grid.Column="1" Margin="5,0,0,0"/>

                        <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="text_DatInfoDescription" Text="—"
                                   Grid.Row="4" Grid.Column="1"
                                   Margin="5,0,0,0"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>